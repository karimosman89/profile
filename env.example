# Professional Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="Karim Osman - AI/ML Portfolio"
APP_VERSION=2.0.0
STREAMLIT_ENV=production
DEBUG=false

# Professional Information
OWNER_NAME="Karim Osman"
OWNER_EMAIL="karim.osman.ai@gmail.com"
OWNER_PHONE="+20 123 456 7890"
OWNER_LOCATION="Alexandria, Egypt"

# Social Media Links
LINKEDIN_URL="https://linkedin.com/in/karim-osman"
GITHUB_URL="https://github.com/karimosman89"
TWITTER_URL="https://twitter.com/karim_ai"
WEBSITE_URL="https://kosman.streamlit.app"

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portfolio
DB_USER=portfolio_user
DB_PASSWORD=your_secure_password_here
DB_SSL_MODE=prefer

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_SSL=false

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
FROM_EMAIL=karim.osman.ai@gmail.com
EMAIL_USE_TLS=true

# Analytics and Monitoring
GOOGLE_ANALYTICS_ID=your_ga_id_here
SENTRY_DSN=your_sentry_dsn_here
HOTJAR_ID=your_hotjar_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here
ENABLE_ANALYTICS=true

# Cloud Services - AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET_NAME=your_s3_bucket_name

# Cloud Services - Google Cloud
GCP_PROJECT_ID=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Cloud Services - Azure
AZURE_STORAGE_ACCOUNT=your_azure_storage_account
AZURE_STORAGE_KEY=your_azure_storage_key

# Security
SECRET_KEY=your_very_secure_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT_MINUTES=30

# Performance Settings
CACHE_TTL=3600
MAX_UPLOAD_SIZE=50
RATE_LIMIT_PER_MINUTE=100

# Feature Flags
ENABLE_CONTACT_FORM=true
ENABLE_SEO=true
ENABLE_DARK_MODE=true

# Content Settings
PROJECTS_PER_PAGE=6
BLOG_POSTS_PER_PAGE=5
TESTIMONIALS_PER_PAGE=3

# Deployment Passwords
POSTGRES_PASSWORD=your_secure_postgres_password
REDIS_PASSWORD=your_secure_redis_password
GRAFANA_PASSWORD=your_secure_grafana_password
